<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".home.Activity.ManagementSusbscriptionActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/nanumsquareb"
            android:gravity="center_horizontal"

            android:text="이용 서비스 관리"
            android:textColor="@color/mainColor"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/delete_subscription_ativity_management_subscription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:clickable="true"
            android:fontFamily="@font/nanumsquarer"
            android:gravity="center_horizontal"

            android:text="해지"
            android:textColor="@color/red"
            android:textSize="17dp" />

        <ImageButton
            android:id="@+id/bac"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:adjustViewBounds="true"
            android:background="@color/transparentColor"
            android:onClick="backButton"
            android:padding="2.5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/back" />
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="9"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/logo_ativity_management_subscription"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"

                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/naver_logo" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name_ativity_management_subscription"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/nanumsquarer"

                        android:gravity="bottom|left"
                        android:maxLines="1"
                        android:paddingLeft="20dp"
                        android:paddingBottom="2dp"
                        android:text="네이버 플러스 멤버십"
                        android:textColor="@color/black"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/payment_system_ativity_management_subscription"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/nanumsquarer"

                        android:gravity="start|left"
                        android:maxLines="1"
                        android:paddingLeft="20dp"
                        android:paddingTop="3dp"
                        android:text="basic"
                        android:textColor="@color/grayColor"
                        android:textSize="17dp" />

                </LinearLayout>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"

                    android:fontFamily="@font/nanumsquarer"
                    android:text="최초 결제일"
                    android:textColor="@color/black"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/beginnig_date_ativity_management_subscription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="20dp"

                    android:fontFamily="@font/nanumsquareb"
                    android:text="20202년 7월 3일"
                    android:textColor="@color/black"
                    android:textSize="17dp" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"

                    android:fontFamily="@font/nanumsquarer"
                    android:text="예상 결제일"
                    android:textColor="@color/black"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/pay_date_ativity_management_subscription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="20dp"

                    android:fontFamily="@font/nanumsquareb"
                    android:text="20202년 9월 3일"
                    android:textColor="@color/black"
                    android:textSize="17dp" />

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="35dp"

                android:fontFamily="@font/nanumsquarer"
                android:text="결제 금액"
                android:textColor="@color/black"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/price_ativity_management_subscription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="@color/mainColor"
                android:gravity="center_vertical"
                android:hint="서비스 금액 입력"
                android:inputType="number"
                android:maxLength="10"
                android:singleLine="true"
                android:text="4,900"
                android:textColor="@color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="17dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"

                android:fontFamily="@font/nanumsquarer"
                android:text="구독 해지 링크"
                android:textColor="@color/black"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/delete_url_ativity_management_subscription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="@color/mainColor"
                android:gravity="center_vertical"
                android:hint="URL(선택 등록 정보)"

                android:maxLength="200"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="17dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <LinearLayout
                android:id="@+id/use_status_layout_ativity_management_subscription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:background="@color/colorGray" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="30dp"

                        android:fontFamily="@font/nanumsquarer"
                        android:text="지난 달 서비스 관련 이용 현황"

                        android:textColor="@color/black"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/use_status_ativity_management_subscription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="20dp"
                        android:fontFamily="@font/nanumsquarer"

                        android:gravity="right"
                        android:text="4,000 원"
                        android:textColor="@color/black"
                        android:textSize="17dp" />

                </FrameLayout>

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/linechart_activity_manage_subscription"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="35dp"

                            android:fontFamily="@font/nanumsquarer"
                            android:text="지난 달 이용 총평"
                            android:textColor="@color/black"
                            android:textSize="17dp" />

                        <ImageView
                            android:id="@+id/warnnig_ativity_management_subscription"
                            android:layout_width="30dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="25dp"
                            android:src="@drawable/warning"
                            android:scaleType="fitCenter"/>


                    </LinearLayout>

                    <TextView
                        android:id="@+id/recommendation_ativity_management_subscription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="35dp"
                        android:layout_marginRight="20dp"
                        android:fontFamily="@font/nanumsquarer"

                        android:gravity="right"
                        android:text="해지 추천"
                        android:textColor="@color/red"
                        android:textSize="17dp" />

                </FrameLayout>


                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <TextView
                    android:id="@+id/review_ativity_management_subscription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/nanumsquarer"
                    android:text="지난 달 사용액 대비 혜택 받는 금액이 더 적을 것 으로 예상됩니다."

                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@color/colorGray" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/nanumsquarer"
                    android:gravity="center_vertical"

                    android:text="최초 결제일 수정"
                    android:textColor="@color/black"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/update_pay_date_ativity_management_subscription"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginRight="45dp"
                    android:fontFamily="@font/nanumsquarer"
                    android:gravity="center_vertical"

                    android:text="2020년 7월 23일"
                    android:textColor="@color/mainColor"
                    android:textSize="17dp" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="right|center"

                    android:layout_marginRight="20dp"
                    android:adjustViewBounds="true"
                    android:background="@color/transparentColor"
                    android:elevation="3dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/front_purple" />

                <View
                    android:id="@+id/pay_date_touch_view_ativity_management_subscription"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ripple_touch_event"
                    android:clickable="true" />

            </FrameLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:clickable="true"
                    android:fontFamily="@font/nanumsquarer"
                    android:gravity="center_vertical"

                    android:text="결제 전 알림 수정"
                    android:textColor="@color/black"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/alarm_setting_ativity_management_subscription"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginRight="45dp"
                    android:clickable="true"
                    android:fontFamily="@font/nanumsquarer"
                    android:gravity="center_vertical"

                    android:text="1일 전"
                    android:textColor="@color/mainColor"
                    android:textSize="17dp" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="right|center"

                    android:layout_marginRight="20dp"
                    android:adjustViewBounds="true"
                    android:background="@color/transparentColor"
                    android:elevation="3dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/front_purple" />

                <View
                    android:id="@+id/alarm_setting_touch_view_ativity_management_subscription"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ripple_touch_event"
                    android:clickable="true" />
            </FrameLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@color/colorGray" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"

                android:fontFamily="@font/nanumsquarer"
                android:text="서비스 정보 &amp; 메모"
                android:textColor="@color/black"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/description_ativity_management_subscription"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@null"
                android:gravity="start"
                android:hint="구독 서비스에 대한 설명, 메모를 입력해보세요."

                android:maxLength="100"
                android:textColor="@color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="17dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/service_update_button_ativity_management_subscription"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/mainColor"
        android:fontFamily="@font/nanumsquareb"
        android:onClick="updateSubscriptionData"
        android:text="서비스 정보 수정하기"
        android:textColor="@color/white"

        android:textSize="20dp"

        />

</LinearLayout>