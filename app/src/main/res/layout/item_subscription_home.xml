<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@drawable/item_subscription_home"
    android:orientation="vertical"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <TextView
            android:id="@+id/starting_date_subsciption_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:fontFamily="@font/nanumsquareb"
            android:gravity="center_vertical"

            android:paddingLeft="20dp"
            android:text="8월 15일"
            android:textColor="@color/black"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/d_day_date_subsciption_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="35dp"
            android:fontFamily="@font/nanumsquarer"

            android:gravity="right|center_vertical"
            android:text="D-22"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <ImageButton
            android:id="@+id/alarm_button_subsciption_home"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="10dp"

            android:adjustViewBounds="true"
            android:background="@color/transparentColor"
            android:scaleType="fitCenter"
            android:src="@drawable/alarm_button" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_subsciption_home"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"

            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/naver_logo" />

        <TextView
            android:id="@+id/name_subsciption_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:paddingLeft="10dp"

            android:fontFamily="@font/nanumsquarer"
            android:text="Naver Plus\nMembership"
            android:textSize="15dp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/price_subsciption_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:paddingRight="10dp"

            android:fontFamily="@font/nanumsquareb"
            android:text="3,900원"
            android:textSize="18dp"
            android:textColor="@color/black"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.3">

        <Button
            android:id="@+id/manage_button_subscription_home"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"

            android:fontFamily="@font/nanumsquarer"
            android:text="관리"
            android:textSize="15dp" />

        <Button
            android:id="@+id/cancle_button_subscription_home"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"

            android:fontFamily="@font/nanumsquarer"
            android:text="해지"
            android:textColor="#ff0000"
            android:textSize="15dp" />

    </LinearLayout>


</LinearLayout>