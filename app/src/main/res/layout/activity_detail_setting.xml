<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/nanumsquareb"
            android:gravity="center_horizontal"

            android:text="설정"
            android:textColor="@color/mainColor"
            android:textSize="17dp" />

        <ImageButton
            android:id="@+id/setting_back_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:adjustViewBounds="true"
            android:background="@color/transparentColor"
            android:padding="2.5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/back" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_weight="9"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/card_register_layout"
            android:layout_width="match_parent"

            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="@drawable/setting_button_background"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:clickable="true">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.4"
                android:layout_marginLeft="15dp"
                android:src="@drawable/ic_baseline_credit_card_24"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="계좌 등록하기"
                android:textSize="17dp"
                android:textColor="@color/colorPurple"
                android:textAlignment="center"
                android:layout_gravity="center"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.4"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_baseline_chevron_right_24"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/recommendation_data_csv_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="@drawable/setting_button_background"
            android:layout_marginBottom="40dp"
            android:clickable="true">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.4"
                android:layout_marginLeft="15dp"
                android:src="@drawable/ic_outline_cloud_download_24"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="추천 데이터 내려받기"
                android:textSize="17dp"
                android:textColor="@color/colorPurple"
                android:textAlignment="center"
                android:layout_gravity="center"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.4"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_baseline_chevron_right_24"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/card_data_csv_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="@drawable/setting_button_background"
            android:layout_marginBottom="40dp"
            android:clickable="true">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.4"
                android:layout_marginLeft="15dp"
                android:src="@drawable/ic_outline_cloud_download_24"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="계좌 데이터 내려받기"
                android:textSize="17dp"
                android:textColor="@color/colorPurple"
                android:textAlignment="center"
                android:layout_gravity="center"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.4"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_baseline_chevron_right_24"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/survey_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="@drawable/setting_button_background"
            android:layout_marginBottom="40dp"
            android:clickable="true">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="0.4"
                android:layout_marginLeft="15dp"
                android:src="@drawable/ic_outline_info_24" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="내 정보 ＆ 관심사 등록"
                android:textSize="17dp"
                android:textColor="@color/colorPurple"
                android:textAlignment="center"
                android:layout_gravity="center"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.4"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_baseline_chevron_right_24"
                android:layout_gravity="center"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>